[module/notifications]
type = custom/script
exec = .local/bin/check_notifications.sh
click-left = notify-send "DUNST_COMMAND_TOGGLE"
interval = 0
format-foreground = ${colors.primary}

[module/screensaver]
type = custom/script
exec = .local/bin/check_screensaver.sh
click-left = .local/bin/toggle_screensaver.sh
interval = 0
format-foreground = ${colors.primary}

[module/torrents]
type = custom/script
exec = .local/bin/polybar_torrents.sh
click-left = transmission-remote-gtk &
click-right = .local/bin/check_torrents.sh
initial = 1
interval = 10
format-foreground = ${colors.primary}

[module/cputemp]
type = custom/script
exec = .local/bin/cputemp.sh
interval = 10
click-left = rxvt -e htop

format-prefix = "Ôãõ "
format-prefix-foreground = ${colors.primary}

[module/weather_icon]
type = custom/script
exec = .local/bin/weather.sh
interval = 60
label-foreground = ${colors.primary}

format-padding = 0
format = <label>
format-font = 4

label = %output:0:24%
click-right = .local/bin/weather_updated.sh

[module/weather]
type = custom/script
exec = .local/bin/weather.sh

interval = 60

format-padding = 0
format = <label>
label-padding-right = 3
label = %output%

click-left = sxiv .local/share/weather.png
click-right = .local/bin/weather_updated.sh

[module/date]
type = internal/date
interval = 5
date-alt = " %Y-%m-%d"

time = %I:%M%p
time-alt = %H:%M:%S

format-prefix = "ÔÄó"
format-prefix-foreground = ${colors.primary}
label = %date% %time%

click-right = gsimplecal

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_0c_00.4.analog-stereo

format-volume = <label-volume>
format-volume-prefix = "ÔÄ® "
format-volume-prefix-foreground = ${colors.primary}
