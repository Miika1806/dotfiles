[colors]
background = ${xrdb:color0:#05060A}
background-alt = ${xrdb:color10}
foreground = ${xrdb:color7:#f4dfbd}
;;${xrdb:foreground:#fff}
foreground-alt = #555555
primary = ${xrdb:color5}
secondary = ${xrdb:color1}
alert = #bd2c40
underline-normal = ${xrdb:color11}
underline-alternate = #b9b5b8

[settings]
screenchange-reload = true
pseudo-transparency = false
format-padding = 1

[global/wm]
margin-top = 5
margin-bottom = 5
format-underline = ${colors.primary}

[bar/bar-t440p]
monitor = ${env:MONITOR:DP-2-2}
monitor-fallback = ${env:MONITOR:eDP-1}
monitor-strict = false
monitor-exact = true
enable-ipc = true

width = 100%
height = 32
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-right = 1

font-0 = DejaVuSansMonoNerdFontMono:size=10;3
font-1 = DejaVuSansMonoNerdFontMono:size=16;4
font-2 = NotoColorEmoji:scale=8;2

modules-left = bspwm mpd
modules-center =
modules-right = weather torrents cointop caffeine notifications temperature cpu battery pulseaudio date network powermenu

wm-restack = bspwm
override-redirect = true

format-underline = {colors.secondary}

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer

[bar/bar-e480]
monitor = ${env:MONITOR:HDMI-1}
monitor-fallback = ${env:MONITOR:eDP-1}
monitor-strict = false
monitor-exact = true
enable-ipc = true

width = 100%
height = 32
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-right = 1

font-0 = DejaVuSansMonoNerdFontMono:size=10;3
font-1 = DejaVuSansMonoNerdFontMono:size=16;4
font-2 = NotoColorEmoji:scale=8;2

modules-left = bspwm mpd
modules-center =
modules-right = weather caffeine notifications pulseaudio date network battery powermenu

wm-restack = bspwm
override-redirect = true

format-underline = {colors.secondary}

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer

[module/bspwm]
type = internal/bspwm

pin-workspaces = true

ws-icon-0 = "1;1"
ws-icon-1 = "2;2"
ws-icon-2 = "3;3"
ws-icon-3 = "4;4"
ws-icon-4 = "5;5"
ws-icon-5 = "6;6"
ws-icon-6 = "7;7"
ws-icon-7 = "8;8"
ws-icon-8 = "9;9"
ws-icon-9 = "10;10"

label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.secondary}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-overline = ${colors.primary}
label-occupied-padding = 2

label-urgent = %icon%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2
format-padding = 0

[module/mpd]
type = internal/mpd

host = localhost
port = 6600

interval = 2

format-online = <icon-prev> <toggle> <icon-next> <icon-repeat> <icon-random> <label-time> <label-song>

label-song = "%{T2}%{F#c85e7c}%{F-}%{T-} %artist% - %title%"
label-song-maxlen = 66
label-offline = %{T2}ﱙ%{T-} mpd is offline

icon-play = %{T2}%{T-}
icon-pause = %{T2}%{T-}
icon-stop = %{T2}%{T-}
icon-prev = %{T2}%{T-}
icon-next = %{T2}%{T-}
icon-seekb = %{T2}%{T-}
icon-seekf = %{T2}%{T-}
icon-random = %{T2}%{T-}
icon-repeat = %{T2}%{T-}

icon-play-foreground = ${colors.primary}
icon-pause-foreground = ${colors.primary}
icon-stop-foreground = ${colors.primary}
icon-prev-foreground = ${colors.primary}
icon-next-foreground = ${colors.primary}
icon-seekb-foreground = ${colors.primary}
icon-seekf-foreground = ${colors.primary}

toggle-on-foreground = ${colors.primary}
toggle-off-foreground = #55

bar-progress-width = 12
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

[module/weather]
type = custom/script
exec = .local/bin/polybar_weather.sh

interval = 30

format = <label>
label = %output%
format-padding-right = 3
format-underline = ${colors.underline-normal}

click-left = urxvt -hold -e cat .local/share/weather_report
click-right = .local/bin/check_weather.sh

[module/torrents]
type = custom/script
exec = .local/bin/polybar_torrents.sh
click-left = transmission-remote-gtk &
click-right = .local/bin/check_torrents.sh
initial = 1
interval = 10
format-foreground = ${colors.primary}
format-underline = ${colors.underline-alternate}

[module/cointop]
type = custom/script
exec = .local/bin/polybar_cointop.sh
click-left = urxvt -e cointop
click-right = .local/bin/check_cointop.sh
interval = 60
format-foreground = ${colors.primary}
format-underline = ${colors.underline-normal}

[module/xbacklight]
type = internal/xbacklight
enable-scroll = true

; format = <label> <bar>
format = <label>
label = " %percentage%%"
format-underline = #4bffdc

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/caffeine]
type = custom/ipc
hook-0 = .local/bin/polybar_caffeine.sh --off
hook-1 = .local/bin/polybar_caffeine.sh --toggle
initial = 1
click-left = polybar-msg -p %pid% hook caffeine 2

format-foreground = ${colors.primary}
format-font = 2
format-underline = ${colors.underline-alternate}

[module/notifications]
type = custom/ipc
hook-0 = .local/bin/polybar_notifications.sh --on
hook-1 = .local/bin/polybar_notifications.sh --toggle
initial = 1
click-left = polybar-msg -p %pid% hook notifications 2

format-foreground = ${colors.primary}
format-font = 2
format-underline = ${colors.underline-normal}

[module/temperature]
type = internal/temperature
; Thermal zone to use
; To list all the zone types, run
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
; thermal-zone = 0

; Full path of temperature sysfs path
; Use `sensors` to find preferred temperature source, then run
; $ for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input
; base-temperature = 40
warn-temperature = 70

format = <label>
format-warn = <label-warn>

label = %{A1:alacritty -e "sudo watch sensors" &:}%{T2}%{F#c85e7c}%{T-}%{F-} %temperature%%{A}
label-warn = %{A1:alacritty -e "sudo watch sensors" &:}%{T2}%{T-} %temperature%%{A}
label-warn-foreground = ${colors.secondary}
format-underline = ${colors.underline-alternate}

[module/cpu]
type = internal/cpu
interval = 5
format = %{A1:alacritty -e htop --sort-key=PERCENT_CPU &:}<label>%{A}
format-underline = ${colors.underline-normal}
label = %{T2}%{F#c85e7c}%{T-}%{F-} %percentage%%

[module/battery]
type = internal/battery
full-at = 79

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
poll-interval = 5

time-format = %H:%M

format-full = %{T2}%{F#c85e7c}%{T-}%{F-} <label-full>
format-charging = %{T2}%{F#c85e7c}<animation-charging>%{T-}%{F-} <label-charging>
format-discharging = %{T2}%{F#c85e7c}<ramp-capacity>%{T-}%{F-} <label-discharging>
format-full-underline = ${colors.underline-alternate}
format-charging-underline = ${colors.underline-alternate}
format-discharging-underline = ${colors.underline-alternate}

label-full = %percentage%%
label-charging = %percentage%%
label-discharging = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_0c_00.4.analog-stereo

format-volume-underline = ${colors.underline-normal}
format-volume = <label-volume>
format-volume-prefix = "%{T2}%{T-} "
format-volume-prefix-foreground = ${colors.primary}
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = %{T2}%{T-} muted
label-muted-foreground = #666

click-right = pavucontrol &

[module/date]
type = internal/date
interval = 5
date-alt = " %Y-%m-%d"

time = %I:%M%p
time-alt = %H:%M:%S

format-prefix = "%{T2}%{T-}"
format-prefix-foreground = ${colors.primary}
format-underline = ${colors.underline-alternate}
label = %date% %time%

click-right = gsimplecal

[module/network]
type = custom/script
exec = .local/bin/polybar_connection.sh
interval = 1
click-left = nm-connection-editor
format-foreground = ${colors.primary}
format-font = 2
format-underline = ${colors.underline-normal}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1
label-open = %{T2}%{T-}
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = systemctl reboot
menu-0-1 = power off
menu-0-1-exec = systemctl poweroff
menu-0-2 = suspend
menu-0-2-exec = systemctl suspend
