!!! URXVT configs !!!
URxvt*depth: 24
URxvt*scrollBar:                    false
URxvt*mouseWheelScrollPage:         true
URxvt*scrollTtyOutput:              false
URxvt*scrollWithBuffer:             true
URxvt.secondaryScreen:              1
URxvt.secondaryScroll:              0
URxvt*cursorBlink:                  true
URxvt.cursorUnderline:              false
URxvt*saveline:                     2048
URxvt.iso14755:                     false
URxvt.letterSpace:                  0
URxvt.lineSpace:                    0
URxvt.geometry:                     92x24
URxvt.internalBorder:               4
URxvt.intensityStyles:  	        false
URxvt.scrollBar:    		        false
! URxvt.font:         		        xft:DejaVu Sans Mono:size=10, xft:FontAwesome:size=10, xft:Symbola:size=12, xft:Font Awesome 5 Free:style=Regular:pixelsize=10, xft:Font Awesome 5 Free:style=Solid:size=10
URxvt.font: xft:DejaVuSansMono Nerd Font Mono:size=10:style=Book

! URxvt Extensions
URxvt.perl-ext-common:default,matcher,font-size
! URxvt keybinds
URxvt.keysym.Shift-Control-V:       eval:paste_clipboard
URxvt.keysym.Shift-Control-C:       eval:selection_to_clipboard
URxvt.keysym.C-Up:                  font-size:increase
URxvt.keysym.C-Down:                font-size:decrease

!!! Xft !!!
Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
